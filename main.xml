<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:fontFamily="serif"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:backgroundTint="@color/white"
        android:fontFamily="serif"
        android:text="AC"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="()"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="/"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btnn5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnn6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnn7"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnn8"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="x"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btn10"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn11"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn12"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="-"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn13"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btn14"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn15"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn16"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="+"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn17"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btn18"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn19"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="."
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn20"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="="
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textStyle="bold" />




    </LinearLayout>



</LinearLayout>
